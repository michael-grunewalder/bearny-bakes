---
import BaseHead from '../components/system/BaseHead.astro';
import Navigation from '../components/page/Navigation.astro';
import Footer from '../components/page/Footer.astro';

const dev = (import.meta.env.DEV_MODE) ? 'debug-screens' : ''
const pw = import.meta.env.KEY
console.log('We have ' + pw + ' which is for' + dev)
const {title, description, permalink, canonicalURL } = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} canonicalURL={canonicalURL} />
  </head>
  <body class="min-h-screen bg-apricot-peach-200 ${dev}">
    <!-- Navigation -->
    <Navigation />
    <!-- Hero Section Start -->
		<slot name="hero-section" />
    <!-- <Header/> -->
    <main class="container relative shadow-inner min-h-screen mx-auto bg-apricot-peach-200 z-10">
        <slot/>
    </main>
    <!-- <Footer/> -->
    <Footer />
    <script src="//unpkg.com/alpinejs" defer></script>
  </body>
</html>

